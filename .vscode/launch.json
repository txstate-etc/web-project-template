  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "API",
      "port": 9229,
      "sourceMaps": true,
      "restart": true,
      "remoteRoot": "/usr/app",
      "localRoot": "${workspaceFolder}/api"
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch Chrome",
      "url": "http://localhost",
      "webRoot": "${workspaceFolder}/api"
    }
  ]
}


